@page
@model GrandHotel.Pages.Clients.ClientListOfBillsModel

<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/js/site.min.js"></script>

<h2>List of Bills</h2>
<br /><br /><br /><br /><br /><br /><br /><br />
<body>
    <form method="get" class="col-sm-6">
        <div class="form-actions no-color col-sm-2" style="display:inline-block; margin-top:8px;">
            <label style="font-size:medium">Bills  of:</label>
        </div>
        <div class="form-actions no-color col-sm-3" style="display:inline">
            <select class="form-control" asp-for="Year">
                <option value="2019">2019</option>
                <option value="2018">2018</option>
            </select>
        </div>
        <div class=" col-sm-3" style="display:inline">            
            <button type="submit" class="form-control btn btn-primary" asp-route-year="@Model.Year" >Find</button>
        </div>

        <br />
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Invoice Date</th>
                    <th>Payment Date </th>
                    <th>Payment Method</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var facture in Model.ListOfFacture)
                {
                    <tr>
                        <td>@facture.DateFacture</td>
                        <td>@facture.DatePaiement</td>
                        <td>@facture.CodeModePaiement</td>

                        <td>
                            <a class="btn btn-lg"
                               asp-page="./DetailOfBill"
                               asp-route-Id="@facture.Id">
                                <i class="glyphicon glyphicon-zoom-in"></i>
                            </a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </form>
</body>

