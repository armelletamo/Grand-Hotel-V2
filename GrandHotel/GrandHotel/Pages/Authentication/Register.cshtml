@page
@model GrandHotel.Pages.Authentication.RegisterModel
<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<h2>Register</h2>
<form method="post" class="form-horizontal col-sm-6">
    <div asp-validation-summary="None">
        <div class="form-group">
            <label asp-for="Register.Email"></label>
            <input asp-for="Register.Email" class="form-control" />
            <span class="text-danger" asp-validation-for="Register.Email"></span>
        </div>
        <div class="form-group">
            <label asp-for="Register.Password"></label>
            <input asp-for="Register.Password" class="form-control" />
            <span class="text-danger" asp-validation-for="Register.Password"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
</form>
